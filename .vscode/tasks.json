{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file", // 这个名字要和 launch.json 的 preLaunchTask 一致
            "command": "D:\\minGW\\mingw64\\bin\\g++.exe", // 关键：改成了 g++.exe
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}\\*.cpp", 
                "-o",
                "${fileDirname}\\main.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}